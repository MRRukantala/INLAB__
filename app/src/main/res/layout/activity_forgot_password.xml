<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    tools:context=".ui.forgotpassword.ActivityForgotPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/back_ui"
        android:layout_height="wrap_content">
    <include layout="@layout/header"/></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:orientation="horizontal">


        <com.creativestudio.inlab.utils.widgets.CustomTextBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_2sdp"
            android:text="@string/forgot_your_password"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />
    </LinearLayout>



    <com.creativestudio.inlab.utils.widgets.CustomEditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddress"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/login_edit_grad"
        android:hint="@string/EnterEmailHere"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/_10sdp"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/colorText"
        android:textDirection="locale" />

    <RelativeLayout

        android:layout_width="@dimen/_165sdp"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_button"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/backbutton" />

        <com.creativestudio.inlab.utils.widgets.CustomSmallText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_55sdp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>



    <com.creativestudio.inlab.utils.widgets.CustomSmallText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_55sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/msgTv"

        android:textSize="@dimen/_13sdp" />







</LinearLayout>